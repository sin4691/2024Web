<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>상품 목록</title>
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .product-list {
            display: flex;
            gap: 20px;
            width: 100%;
        }
        .category-list {
            
            border-right: 1px solid black;
            text-align: right;
            flex-basis: 20%;
            margin-right: 20px;
        }
        .category-list ul {
            margin-right: 5px;
            list-style-type: none;
            padding: 0;
        }
        .category-list li {
            cursor: pointer;
        }
        .products {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            flex-basis: 80%;
        }
        .product {
            flex-basis: calc(25% - 20px);
            padding: 10px;
            text-align: center;
        }
        .product img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <div id="container" style="margin-top: 100px;">
        <div class="product-list">
            <div class="category-list">
                <ul id="category-list">
                    <li data-category="all">All</li>
                    <li data-category="all-in-one">올인원</li>
                    <li data-category="outer">아우터</li>
                    <li data-category="top">상의</li>
                    <li data-category="onepiece">원피스</li>
                </ul>
            </div>
            <div class="products" id="productsContainer">
                <% products.forEach(product => { %>
                    <div class="product" data-category="<%= product.category %>">
                        <a href="/products/<%= product.id %>">
                        <img src="/images/<%= product.image %>" alt="<%= product.name %>">
                        <h3><%= product.name %></h3>
                        
                        <p>Price: <%= product.price %></p>
                         </a>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    <script src="/public/shop.js" defer></script>
</body>
</html>
